<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <ui:style field="_style" gss="true">
    .actionsDiv {
      padding-top: 0;
      text-align: center;
    }
  </ui:style>

  <g:HTMLPanel>
    <div class="{_style.actionsDiv}">
      <a href="#">
        <span ui:field="editLink" class="{_bundle.bootstrap.glyphicon} {_bundle.bootstrap.glyphiconPencil}"/>
      </a>
      <a href="#">
        <span ui:field="deleteLink" class="{_bundle.bootstrap.glyphicon} {_bundle.bootstrap.glyphiconTrash}"/>
      </a>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>