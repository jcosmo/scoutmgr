<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
  <ui:with field="_nameTokens" type="scoutmgr.client.place.NameTokens"/>
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
    <g:HTMLPanel id="content" addStyleNames="{_bundle.scoutmgr.content}">
      <form>
        <m:MaterialRow>
          <m:MaterialColumn grid="s6" offset="s3">
            <m:MaterialTextBox ui:field="_username" placeholder="Username" />
          </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
          <m:MaterialColumn grid="s6" offset="s3">
            <m:MaterialTextBox ui:field="_email" placeholder="Email"/>
          </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
          <m:MaterialColumn grid="s6" offset="s3">
            <m:MaterialListBox ui:field="_users" placeholder="Associated Scout"/>
          </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
          <m:MaterialColumn grid="s6" offset="s3">
            <m:MaterialTextBox ui:field="_password" placeholder="Password"/>
          </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
          <m:MaterialColumn grid="s6" offset="s3">
            <m:MaterialTextBox ui:field="_repeatPassword" placeholder="Password (again)"/>
          </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
          <m:MaterialColumn grid="s3" offset="s6" textAlign="RIGHT">
            <m:MaterialButton ui:field="_cancelButton" text="Cancel" iconType="UNDO"/>
            <m:MaterialButton ui:field="_saveButton" text="Save" iconType="DONE"/>
          </m:MaterialColumn>
        </m:MaterialRow>
    </form>
    </g:HTMLPanel>
</ui:UiBinder>
