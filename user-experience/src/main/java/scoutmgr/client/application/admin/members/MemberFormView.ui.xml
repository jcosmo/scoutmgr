<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
              xmlns:m="urn:import:gwt.material.design.client.ui">
  <ui:with field="_nameTokens" type="scoutmgr.client.place.NameTokens"/>
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <g:HTMLPanel id="content" addStyleNames="{_bundle.scoutmgr.content}">
    <form>
      <m:MaterialRow>
        <m:MaterialColumn grid="s10 m6 l4" offset="s1 m3 l4">
          <m:MaterialTextBox ui:field="_regNum" placeholder="Registration Number"/>
        </m:MaterialColumn>
      </m:MaterialRow>
      <m:MaterialRow>
        <m:MaterialColumn grid="s10 m6 l4" offset="s1 m3 l4">
          <m:MaterialListBox ui:field="_scoutSection" placeholder="Scout Section"/>
        </m:MaterialColumn>
      </m:MaterialRow>
      <m:MaterialRow>
        <m:MaterialColumn grid="s10 m6 l4" offset="s1 m3 l4">
          <m:MaterialTextBox ui:field="_givenName" placeholder="Given Name"/>
        </m:MaterialColumn>
      </m:MaterialRow>
      <m:MaterialRow>
        <m:MaterialColumn grid="s10 m6 l4" offset="s1 m3 l4">
          <m:MaterialTextBox ui:field="_familyName" placeholder="Family Name"/>
        </m:MaterialColumn>
      </m:MaterialRow>
      <m:MaterialRow>
        <m:MaterialColumn grid="s10 m6 l4" offset="s1 m3 l4">
          <m:MaterialDatePicker ui:field="_dob" placeholder="Date of birth"/>
        </m:MaterialColumn>
      </m:MaterialRow>
      <m:MaterialRow>
        <m:MaterialColumn grid="s10 m6 l4" offset="s1 m3 l4" textAlign="RIGHT" addStyleNames="{_bundle.scoutmgr.buttonBar}">
          <m:MaterialButton ui:field="_cancelButton" text="Cancel" iconType="UNDO"/>
          <m:MaterialButton ui:field="_saveButton" text="Save" iconType="DONE"/>
        </m:MaterialColumn>
      </m:MaterialRow>
    </form>
  </g:HTMLPanel>
</ui:UiBinder>
