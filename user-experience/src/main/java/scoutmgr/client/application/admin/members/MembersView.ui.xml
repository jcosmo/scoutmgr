<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:m="urn:import:gwt.material.design.client.ui">
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>

  <g:LayoutPanel ui:field="_membersPanel" addStyleNames="{_bundle.scoutmgr.content}">
    <g:layer top="0" bottom="50px" left="0" right="0">
      <m:MaterialTitle title="Registered Members"/>
    </g:layer>
    <g:layer top="50px" bottom="0" left="0" right="0">
      <c:DataGrid ui:field="_memberTable" addStyleNames="striped"/>
    </g:layer>
    <g:layer bottom="0" width="80px" right="0" height="70px">
      <m:MaterialButton ui:field="_addScoutButton" type="FLOATING" text="Add Scout" backgroundColor="blue" iconType="ADD" size="LARGE"/>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>