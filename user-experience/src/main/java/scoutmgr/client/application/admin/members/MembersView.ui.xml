<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>

  <g:LayoutPanel ui:field="_membersPanel" addStyleNames="{_bundle.scoutmgr.content}">
    <g:layer top="0" height="30px" left="0" width="50%">
      <g:Button ui:field="_addScoutButton">Add Scout</g:Button>
    </g:layer>
    <g:layer top="0" height="30px" right="0" width="50%">
      <c:SimplePager ui:field='_pager'/>
    </g:layer>
    <g:layer top="30px" bottom="0">
      <c:DataGrid ui:field="_memberTable"/>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>