<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <ui:style>
    .badgeworkProgressDialog {
    }

    .header {
      font-size: 2rem;
      border-bottom: solid 1px lightgrey;
    }

    .title {
    }

    .description {
      font-size: 1.25rem;
    }

    .footer {
    }
  </ui:style>
  <m:MaterialModal type="FIXED_FOOTER" dismissable="false" inDuration="500" outDuration="500" addStyleNames="{style.badgeworkProgressDialog}">
    <m:MaterialModalContent>
      <g:HTMLPanel addStyleNames="{style.header}">
        <m:MaterialLabel ui:field="_title" addStyleNames="{style.title}"/>
        <m:MaterialLabel ui:field="_description" addStyleNames="{style.description}"/>
      </g:HTMLPanel>
      <m:MaterialTitle title=""/>
    </m:MaterialModalContent>
    <m:MaterialModalFooter addStyleNames="{style.footer}">
      <m:MaterialButton ui:field="_closeButton" text="Close" type="FLAT"/>
    </m:MaterialModalFooter>
  </m:MaterialModal>
</ui:UiBinder>