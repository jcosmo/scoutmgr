<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>

  <g:LayoutPanel addStyleNames="{_bundle.scoutmgr.content}">
    <g:layer left="0" top="0" height="100px" right="0">
      <g:SimplePanel ui:field="_scoutDetailsPanel"/>
      <!--  Chappie Name                               Scout (X years)
            XXXXX Patrol                            Joined AA/BB/CCCC
                                            chappie@foo.something ... -->
    </g:layer>
    <g:layer left="0" top="100px" bottom="0" right="0">
      <g:TabLayoutPanel barUnit='EM' barHeight='3' ui:field="_tabPanel">
        <g:tab>
          <g:header size='7'>Badgework</g:header>
          <g:Label>working on this!</g:Label>
        </g:tab>
        <g:tab>
          <g:header size='7'>Events</g:header>
          <g:Label>Event attendance is not yet implemented</g:Label>
        </g:tab>
        <g:tab>
          <g:header size='7'>Notes</g:header>
          <g:Label>Notes are not yet implemented</g:Label>
        </g:tab>
      </g:TabLayoutPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>