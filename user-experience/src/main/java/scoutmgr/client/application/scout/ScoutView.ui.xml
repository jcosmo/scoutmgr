<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <ui:style>
    .nocaps {
      text-transform: capitalize;
    }
  </ui:style>
  <g:HTMLPanel addStyleNames="{_bundle.scoutmgr.content}">
    <m:MaterialRow>
      <m:MaterialColumn grid="s12">
        <!--  Chappie Name                               Scout (X years)
              XXXXX Patrol                            Joined AA/BB/CCCC
                                              chappie@foo.something ... -->
        <g:SimplePanel ui:field="_scoutDetailsPanel"/>
      </m:MaterialColumn>
    </m:MaterialRow>
    <m:MaterialRow>
      <m:MaterialColumn grid="s12">
        <g:SimplePanel ui:field="_scoutBadgesPanel"/>
      </m:MaterialColumn>
    </m:MaterialRow>
  </g:HTMLPanel>
</ui:UiBinder>
