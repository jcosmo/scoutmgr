<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>

  <g:HTMLPanel addStyleNames="{_bundle.scoutmgr.content}">
    <m:MaterialRow>
      <m:MaterialColumn grid="s12">
        <!--  Chappie Name                               Scout (X years)
              XXXXX Patrol                            Joined AA/BB/CCCC
                                              chappie@foo.something ... -->
        <g:SimplePanel ui:field="_scoutDetailsPanel"/>
      </m:MaterialColumn>
    </m:MaterialRow>
    <m:MaterialRow>
      <m:MaterialColumn grid="s12">
        <m:MaterialTab ui:field="_tabs" backgroundColor="blue lighten-5" indicatorColor="blue darken-2">
          <m:MaterialTabItem grid="s4">
            <m:MaterialLink text="Badgework" href="#tab_badgework" textColor="black"/>
          </m:MaterialTabItem>
          <m:MaterialTabItem grid="s4">
            <m:MaterialLink text="Events" href="#tab_events" textColor="black"/>
          </m:MaterialTabItem>
          <m:MaterialTabItem grid="s4">
            <m:MaterialLink text="Notes" href="#tab_notes" textColor="black"/>
          </m:MaterialTabItem>
        </m:MaterialTab>
      </m:MaterialColumn>
      <m:MaterialColumn m:id="tab_badgework" grid="s12">
        <g:SimplePanel ui:field="_scoutBadgesPanel"/>
      </m:MaterialColumn>
      <m:MaterialColumn m:id="tab_events" grid="s12">
        <m:MaterialTitle title="Events"/>
        <m:MaterialLabel text="Not implemented yet"/>
      </m:MaterialColumn>
      <m:MaterialColumn m:id="tab_notes" grid="s12">
        <m:MaterialTitle title="Notes"/>
        <m:MaterialLabel text="Not implemented yet"/>
      </m:MaterialColumn>
    </m:MaterialRow>
  </g:HTMLPanel>
</ui:UiBinder>