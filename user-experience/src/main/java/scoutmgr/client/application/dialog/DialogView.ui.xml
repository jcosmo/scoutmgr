<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui">
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <ui:style>
    .borderOnFooter {
      border-top: solid 1px rgba(0,0,0,0.1);
    }
  </ui:style>
  <m:MaterialModal type="DEFAULT" dismissable="false" inDuration="200" outDuration="200">
    <m:MaterialModalContent ui:field="_contentPanel" />
    <m:MaterialModalFooter ui:field="_buttonPanel" addStyleNames="{style.borderOnFooter}"/>
  </m:MaterialModal>
</ui:UiBinder>
