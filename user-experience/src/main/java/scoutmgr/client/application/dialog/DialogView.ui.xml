<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <ui:style gss="true">
    .dialog .closeButton {
      margin-left: 20px;
    }

    .dialog .actionsPanel a {
      float: right;
      margin-left: 10px;
    }
  </ui:style>
  <g:PopupPanel ui:field="_dialog" addStyleNames="{_bundle.scoutmgr.modal} {style.dialog}" glassEnabled="true" glassStyleName="{_bundle.scoutmgr.modalBackdrop}">
    <g:HTMLPanel addStyleNames="{_bundle.bootstrap.modalContent}">
      <div class="{_bundle.bootstrap.popoverTitle}">
        <g:Button ui:field="_closeButton" addStyleNames="{_bundle.bootstrap.close} {style.closeButton}">Ã—</g:Button>
        <g:HTMLPanel ui:field="_actionsPanel" addStyleNames="{_bundle.bootstrap.pullRight} {style.actionsPanel}"/>
        <h4 class="{_bundle.bootstrap.modalTitle}">
          <span ui:field="_caption">
          </span>
        </h4>
        <g:HTMLPanel ui:field="_headerWidgetPanel" addStyleNames="{_bundle.bootstrap.pullRight}"/>
      </div>
      <g:HTMLPanel ui:field="_contentPanel" addStyleNames="{_bundle.bootstrap.modalBody}">
      </g:HTMLPanel>
      <g:HTMLPanel ui:field="_buttonPanel" addStyleNames="{_bundle.bootstrap.modalFooter}" visible="false">
      </g:HTMLPanel>
    </g:HTMLPanel>
  </g:PopupPanel>
</ui:UiBinder>
