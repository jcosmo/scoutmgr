<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma='urn:import:gwt.material.design.addins.client'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <ui:with type="scoutmgr.client.place.NameTokens" field="_nameTokens"></ui:with>
  <g:HTMLPanel>
    <header>
      <m:MaterialNavBar backgroundColor="blue lighten-3" textColor="black" type="FIXED" addStyleNames="z-depth-0 {_bundle.scoutmgr.navbar}">
        <m:MaterialNavBrand float="LEFT" text="Scout Manager" textColor="black"/>
        <m:MaterialNavSection float="RIGHT">
          <m:MaterialTooltip text="Account Settings" position="BOTTOM">
            <m:MaterialLink iconType="ACCOUNT_CIRCLE" iconColor="black" iconPosition="NONE"/>
          </m:MaterialTooltip>
          <m:MaterialTooltip text="Logout" position="BOTTOM">
            <m:MaterialLink iconType="CANCEL" iconColor="black" iconPosition="NONE"/>
          </m:MaterialTooltip>
        </m:MaterialNavSection>
      </m:MaterialNavBar>
      <m:MaterialRow grid="s12" hideOn="HIDE_ON_MED_DOWN" backgroundColor="blue lighten-4" addStyleNames="{_bundle.scoutmgr.menubar}">
        <ma:menubar.MaterialMenuBar>
          <m:MaterialLink href="#{_nameTokens.getAdminScouts}" padding="12" waves="DEFAULT" text="Scout Management" textColor="black"/>
          <m:MaterialLink href="#{_nameTokens.getAdminBadges}" padding="12" waves="DEFAULT" text="Badge Management" textColor="black"/>
          <m:MaterialLink href="#{_nameTokens.getEvents}" padding="12" waves="DEFAULT" text="Event Management" textColor="black"/>
        </ma:menubar.MaterialMenuBar>
      </m:MaterialRow>
    </header>
  </g:HTMLPanel>
</ui:UiBinder>