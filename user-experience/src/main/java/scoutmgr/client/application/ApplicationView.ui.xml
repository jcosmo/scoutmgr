<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style field="_style" gss="true">
    .loader {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      background: url("img/loader.gif") no-repeat center center;
    }
  </ui:style>

  <g:LayoutPanel>
    <g:layer top="0" bottom="0" left="0" right="0">
      <g:Label addStyleNames="{_style.loader}" ui:field="_loading">Loading ...</g:Label>
    </g:layer>

    <g:layer top="0px" bottom="100px" left="0" right="0">
      <g:SimplePanel ui:field="_navbarPanel"/>
    </g:layer>
    <g:layer top="130px" bottom="70px" left="0" right="0">
      <g:LayoutPanel ui:field="_content"/>
    </g:layer>
    <g:layer bottom="0" height="70px" left="0" right="0">
      <g:SimplePanel ui:field="_footerPanel"/>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>