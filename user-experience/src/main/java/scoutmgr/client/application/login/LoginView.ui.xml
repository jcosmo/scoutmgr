<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
  <g:HTMLPanel>
    <m:MaterialRow>
      <m:MaterialColumn grid="s10 m6 l4" offset="s1 m3 l4">
        <m:MaterialTitle title="Please Log In"/>
        <m:MaterialPanel>
          <m:MaterialPanel>
            <m:MaterialTextBox ui:field="_username" type="TEXT" label="Username"/>
            <m:MaterialTextBox ui:field="_password" type="PASSWORD" label="Password"/>
            <m:MaterialButton ui:field="_signInButton" waves="LIGHT" text="Log In" width="100%"/>
          </m:MaterialPanel>
        </m:MaterialPanel>
      </m:MaterialColumn>
    </m:MaterialRow>
  </g:HTMLPanel>
</ui:UiBinder>
