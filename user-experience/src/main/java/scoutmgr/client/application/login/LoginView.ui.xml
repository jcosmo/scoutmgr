<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
  <g:HTMLPanel>
    <m:MaterialRow>
      <m:MaterialColumn grid="s12 m4 l4" offset="l4 m4" >
        <m:MaterialTitle title="Login" description="Please provide your login details."/>
        <m:MaterialPanel padding="5" shadow="1">
          <m:MaterialPanel >
            <m:MaterialTextBox ui:field="_username" type="TEXT" placeholder="Username"/>
            <m:MaterialTextBox ui:field="_password" type="PASSWORD" placeholder="Password"/>
            <m:MaterialButton ui:field="_signInButton" waves="LIGHT" text="Log In" width="100%"/>
          </m:MaterialPanel>
        </m:MaterialPanel>
      </m:MaterialColumn>
    </m:MaterialRow>
  </g:HTMLPanel>
</ui:UiBinder>