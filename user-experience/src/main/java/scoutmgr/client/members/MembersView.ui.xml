<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
  <ui:with field='_bundle' type='scoutmgr.client.resource.ScoutmgrResourceBundle'/>
  <ui:style field="_style" gss="true">
    .memberDiv {
      margin: 10px;
      margin-bottom: 20px;
    }
  </ui:style>

  <g:DockLayoutPanel unit="PX">
    <g:north size="50">
      <g:SimplePanel ui:field="_navbarPanel"/>
    </g:north>
    <g:center>
      <g:LayoutPanel ui:field="_membersPanel" addStyleNames="{_style.memberDiv}">
        <g:layer top="0"  height="30px" left="0" width="50%">
          <g:Label>Group Members</g:Label>
        </g:layer>
        <g:layer top="0" height="30px" right="0" width="50%">
          <c:SimplePager ui:field='_pager' />
        </g:layer>
        <g:layer top="30px" bottom="0">
          <c:DataGrid ui:field="_memberTable"/>
        </g:layer>
      </g:LayoutPanel>
    </g:center>
    <g:south size="70">
      <g:SimplePanel ui:field="_footerPanel"/>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>